{
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
        "next/core-web-vitals",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier/prettier"
    ],
    "rules": {
        "no-console": "off",
        "curly": "warn",
        "no-unused-vars": "warn",
        "no-dupe-else-if": "error",
        "no-import-assign": "error",
        "no-setter-return": "error",
        "require-await": "error",
        "quotes": ["error", "single"],
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "semi": ["error", "always"]
    }
}
